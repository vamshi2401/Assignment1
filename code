def dis_candy(arr):

    c = len(arr)
    l = len(arr)
    if arr[0] > arr[1] or arr[1] > arr[0]:
        c += 1
    elif arr[-2] > arr[-1] or arr[-1] > arr[-2]:
        c += 1
    for i in range(1, l - 1):
        if arr[i] > arr[i + 1] or arr[i] > arr[i - 1]:
            c += 1
    print(c)


arr = list(map(int, input().split()))
dis_candy(arr)
